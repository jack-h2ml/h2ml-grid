{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "h2ml/grid",
  "version": "0.1.0",
  "title": "H2ML Grid",
  "category": "widgets",
  "icon": "smiley",
  "description": "A block for crafting grid based layouts.",
  "textdomain": "h2ml",
  "supports": {
    "anchor": true,
    "reusable": true,
    "align": [
      "center",
      "wide",
      "full"
    ],
    "__experimentalSettings": true,
    "layout": {
      "allowSwitching": false,
      "allowInheriting": false,
      "allowEditing": false,
      "default": {
        "type": "grid"
      }
    },
    "spacing": {
      "blockGap": [
        "vertical",
        "horizontal"
      ],
      "margin": [
        "top",
        "bottom"
      ],
      "padding": true,
      "__experimentalDefaultControls": {
        "margin": true,
        "blockGap": true,
        "padding": true
      }
    },
    "color": {
      "enableContrastChecker": false,
      "gradients": true,
      "text": true,
      "background": true
    },
    "__experimentalBorder": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true,
      "__experimentalDefaultControls": {
        "color": true,
        "radius": true,
        "style": true,
        "width": true
      }
    },
    "dimensions": {
      "minHeight": true
    },
    "typography": {
      "fontSize": true,
      "lineHeight": true
    }
  },
  "attributes": {
    "requestingEdit": {
      "type": "boolean",
      "default": false
    },
    "colCount": {
      "type": "number",
      "default": 3
    },
    "rowCount": {
      "type": "number",
      "default": 4
    },
    "colDefinitions": {
      "type": "array",
      "default": [
        "1fr",
        "1fr",
        "1fr"
      ]
    },
    "rowDefinitions": {
      "type": "array",
      "default": [
        "max-content",
        "max-content",
        "max-content",
        "max-content"
      ]
    }
  },
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css"
}